<c:PopupView
    x:Class="SSCOUIViews.Views.OwnBag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:SSCOUIModels.Controls;assembly=SSCOUIModels"
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls"
    mc:Ignorable="d"
    Width="300"
    Loaded="PopupView_Loaded"
	AlignHorizontallyWithControl="OwnBagButton"
    ControlsToAllowEnabled="UNavControl,AccessibilityButton">
    <DockPanel
        Height="768">
        <Grid
            VerticalAlignment="Bottom"
            Margin="0,0,0,90"
            Height="441">
            <controls:DropShadowBorder
                Style="{StaticResource ownBagPopupDropShadowStyle}" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="89" />
                    <RowDefinition
                        Height="250" />
                    <RowDefinition
                        Height="86" />
                </Grid.RowDefinitions>
                <controls:MeasureTextBlock
                    Grid.Row="0"
                    Style="{StaticResource ownBagInstructionsTextStyle}"
                    Text="{Loc OwnBagMessage}"
                    Margin="20,20,20,0" />
                <controls:AnimationControl
                    Grid.Row="1"
                    Style="{StaticResource ownBagAnimationControlStyle}"
                    Margin="20,0,20,0"
                    Width="250"
                    Height="250" />
                <controls:ImageButton
                    Grid.Row="2"
                    Style="{StaticResource mainButtonStyle}"
                    Text="{Loc Done}"
                    Margin="20,12,20,20"
                    Height="54"
                    Width="Auto"
                    Command="{Binding ActionCommand}"
                    CommandParameter="OwnBagDone" />
            </Grid>
        </Grid>
    </DockPanel>
</c:PopupView>
