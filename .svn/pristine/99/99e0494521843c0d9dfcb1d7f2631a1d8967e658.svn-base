#if !defined(AFX_BASECurrentDISPLAY_H__INCLUDED_)
#define AFX_BASECurrentDISPLAY_H__INCLUDED_

//////////////////////////////////////////////////////////////////////
///
/// CBaseCurrentDisplay is  
///
///	@author: FastLane POSI
///
//////////////////////////////////////////////////////////////////////
class CBaseCurrentDisplay
{
public:
	//////////////////////////////////////////////////////////////////////
	///
	/// Destructor
	///
	//////////////////////////////////////////////////////////////////////
    virtual ~CBaseCurrentDisplay();
    
	//////////////////////////////////////////////////////////////////////
	///
	/// Get2x20LowerLine, accessor for member variable
	///
	///	@return CString m_cs2x20LowerLine
	//////////////////////////////////////////////////////////////////////
    virtual CString Get2x20LowerLine(void);

	//////////////////////////////////////////////////////////////////////
	///
	/// Get2x20UpperLine, accessor for member variable
	///
	///	@return CString m_cs2x20UpperLine
	//////////////////////////////////////////////////////////////////////
    virtual CString Get2x20UpperLine(void);

	//////////////////////////////////////////////////////////////////////
	///
	/// Reset2x20, reset 2x20 display member variables
	///
	//////////////////////////////////////////////////////////////////////
    virtual void Reset2x20();

	//////////////////////////////////////////////////////////////////////
	///
	/// Set2x20, set 2x20 display member variables
	///	
	///	@param CString csUpperLine - containing upper 1x20 display
	///	@param CString csLowerLine - containing lower 1x20 display
	//////////////////////////////////////////////////////////////////////
    virtual void Set2x20(CString csUpperLine, CString csLowerLine);

	//////////////////////////////////////////////////////////////////////
	///
	/// Set2x20LowerLine, set 2x20 lower display member variable
	///	
	///	@param CString csLowerLine - containing lower 1x20 display
	//////////////////////////////////////////////////////////////////////
    virtual void Set2x20LowerLine(CString csLowerLine);

	//////////////////////////////////////////////////////////////////////
	///
	/// Set2x20UpperLine, set 2x20 upper display member variable
	///	
	///	@param CString csUpperLine - containing upper 1x20 display
	//////////////////////////////////////////////////////////////////////
    virtual void Set2x20UpperLine(CString csLowerLine);

	    
protected:
	//////////////////////////////////////////////////////////////////////
	///
	/// Constructor, should not be called outside of this class (instance function)
	///
	//////////////////////////////////////////////////////////////////////
    CBaseCurrentDisplay();  
    
private:
	//////////////////////////////////////////////////////////////////////
	///
	/// Hide Copy Const
	///
	//////////////////////////////////////////////////////////////////////
    CBaseCurrentDisplay(CBaseCurrentDisplay &);                    // hide copy const

	//////////////////////////////////////////////////////////////////////
	///
	/// Hide Assignment
	///
	//////////////////////////////////////////////////////////////////////
    CBaseCurrentDisplay & operator =(const CBaseCurrentDisplay &); // hide assignment
    
    CString m_cs2x20UpperLine;	///< variable to store 2x20 upper line

    CString m_cs2x20LowerLine;	///< variable to store 2x20 lower line
};

#endif // !defined(AFX_BASECurrentDISPLAY_H__INCLUDED_)

