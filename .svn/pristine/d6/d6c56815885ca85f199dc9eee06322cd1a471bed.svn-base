<c:BackgroundView
    x:Class="SSCOUIViews.Views.StoreModeFullAssist" 
    xmlns:c="clr-namespace:SSCOUIModels.Controls;assembly=SSCOUIModels" 
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:SSCOUIViews.Controls"
    mc:Ignorable="d"
    ShowCart="True"
    ShowHeader="True"
    ShowSystemFunctions="True"
    HorizontalAlignment="Left">
    <Border
        Height="578"
        Width="644"
        Margin="20,20,0,10"
        Style="{StaticResource glowBorderStyle}">
        <DockPanel>
            <StackPanel
                Height="150"
                Orientation="Vertical"
                DockPanel.Dock="Top">
				<!-- SSCOI-45999: change the Style definition for the SMLineText with reduce font size -->
				<!-- SSCOI-46487: Change the Height of SMLineText to a static value 75 -->
                <controls:MeasureTextBlock
                    Style="{StaticResource storeModeFullAssistInfoTextStyle}"
                    Name="SMLineText"
                    Margin="20,6,22,12"
                    Height="75"
                    MaxHeight="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top"
                    Focusable="False" />
                <controls:MeasureTextBlock
                    Name="FullAssistInput1"
                    Style="{StaticResource storeModeFullAssistTextBlockStyle}"
                    Margin="20,0,22,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top"
                    Focusable="False" />
				<!-- Remove control below. It was not used in this solution -->
                <!--controls:MeasureTextBlock
                    Name="FullAssistInput2"
                    Style="{StaticResource storeModeFullAssistTextBlockStyle}"
                    Margin="0,0,22,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top"
                    Focusable="False" /-->
            </StackPanel>
            <Grid
                DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Orientation="Vertical"
                    DockPanel.Dock="Top"
                    Grid.Row="0"
                    Grid.Column="0">
                    <ItemsControl
                        ItemsSource="{Binding ButtonList1}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="2"
                                    Margin="20,-2,0,0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList1"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Style="{StaticResource storeModeFullAssistButtonStyle}"
                                        Click="AssistKeyboard_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl
                        ItemsSource="{Binding ButtonList3}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="3"
                                    Margin="20,0,0,0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList3"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Style="{StaticResource storeModeFullAssistNumericButtonStyle}"
                                        Click="AssistKeyboard_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <DockPanel
                    DockPanel.Dock="Top"
                    Grid.Row="1"
                    Grid.Column="0">
                    <ItemsControl
                        ItemsSource="{Binding ButtonList4}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="1"
                                    Margin="20,0,0,0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList4"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Click="AssistKeyboard_Click">
                                        <controls:ImageButton.Style>
                                            <Style
                                                TargetType="ImageButton"
                                                BasedOn="{StaticResource storeModeFullAssistNumericButtonStyle}">
                                                <Setter
                                                    Property="Width"
                                                    Value="143" />
                                            </Style>
                                        </controls:ImageButton.Style>
                                    </controls:ImageButton>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl
                        ItemsSource="{Binding ButtonList5}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="1"
                                    Margin="0,0,0,0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList5"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Style="{StaticResource storeModeFullAssistNumericButtonStyle}"
                                        Click="AssistKeyboard_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
                <StackPanel
                    Orientation="Vertical"
                    DockPanel.Dock="Top"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1">
                    <ItemsControl
                        ItemsSource="{Binding ButtonList7}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="1"
                                    Margin="0,-2,0,0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList7"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Style="{StaticResource storeModeFullAssistButtonStyle}"
                                        Click="AssistKeyboard_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl
                        ItemsSource="{Binding ButtonList2}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid
                                    Columns="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <controls:ImageButton
                                        Name="ButtonList2"
                                        Text="{Binding Text}"
                                        IsEnabled="{Binding IsEnabled}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Click="AssistKeyboard_Click">
                                        <controls:ImageButton.Style>
                                            <Style
                                                TargetType="ImageButton"
                                                BasedOn="{StaticResource storeModeFullAssistButtonStyle}">
                                                <Setter
                                                    Property="Height"
                                                    Value="117" />
                                            </Style>
                                        </controls:ImageButton.Style>
                                    </controls:ImageButton>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <ItemsControl
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="2"
                    ItemsSource="{Binding ButtonList6}"
		    Name="ButtonList6">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <controls:ImageButton
                                    Name="ButtonList6"
                                    Text="{Binding Text}"
                                    IsEnabled="{Binding IsEnabled}"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Click="AssistKeyboard_Click">
                                    <controls:ImageButton.Style>
                                        <Style
                                            TargetType="ImageButton"
                                            BasedOn="{StaticResource storeModeMainButtonStyle}">
                                            <Setter
                                                Property="Height"
                                                Value="48" />
                                            <Setter
                                                Property="Width"
                                                Value="260" />
                                            <Setter
                                                Property="Margin"
                                                Value="10,0,0,4" />
                                        </Style>
                                    </controls:ImageButton.Style>
                                </controls:ImageButton>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DockPanel>
    </Border>
</c:BackgroundView>