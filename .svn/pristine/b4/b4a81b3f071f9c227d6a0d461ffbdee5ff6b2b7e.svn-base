/// 
/// The HashAlgorithm class. The class HashAlgorithm was
/// not available in Windows CE. Instead, this HashAlgorithm class will be used
/// for Windows CE.
/// 

namespace LaunchPadNet
{
	/// <summary>
	/// The Hash class. 
	/// </summary>
	public abstract class HashAlgorithm
	{
		/// <summary>
		/// The class constructor.
		/// </summary>
		public HashAlgorithm()
		{
		}

		/// <summary>
		/// The class destructor.
		/// </summary>
		~HashAlgorithm()
		{
		}

		/// <summary>
		/// Compute the hash array and return it.
		/// </summary>
		public abstract byte[] ComputeHash(
			byte[] buffer
			);
	}
}