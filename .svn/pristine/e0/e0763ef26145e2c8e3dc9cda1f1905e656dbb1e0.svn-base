<c:BackgroundView
    x:Class="SSCOUIViews.Views.Tender"
    xmlns:c="clr-namespace:SSCOUIModels.Controls;assembly=SSCOUIModels"
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls"
    xmlns:sgp="clr-namespace:SSCOControls.SlidingGridPageComponents;assembly=SSCOControls"
    xmlns:sscouiViewsControls="clr-namespace:SSCOUIViews.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"
    Margin="20,114,0,0"
    Loaded="BackgroundView_Loaded">
    <Grid
        Name="PaymentOptions"
        Width="644">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="482" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Name="MainPayment"
            Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="80" />
                <RowDefinition
                    Height="70" />
                <RowDefinition
                    MinHeight="220"
                    MaxHeight="290" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.RowSpan="4"
                Style="{StaticResource glowBorderStyle}"
                Width="644"
                Height="482" />
            <controls:MeasureTextBlock
                Name="LeadthruText"
                Grid.Row="0"
                Margin="24,18,12,0"
                Style="{StaticResource tenderTextStyle}"
                Text="{Loc SelectPaymentType}" />
            <controls:MeasureTextBlock
                Name="SNDLeadthruText"
                Grid.Row="0"
                Margin="24,18,12,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Style="{StaticResource SNDUnderlinetenderTextStyle}"
                Text="{Loc ScotApp_9505}" />
            <sscouiViewsControls:DueAndPaid
                Grid.Row="1" />
            <StackPanel
                Grid.Row="2"
                Width="Auto"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <controls:ImageButton
                    Name="Tender1"
                    Command="{Binding ActionCommand}"
                    Text="Tender1"
                    Visibility="Collapsed" />
                <Border
                    Name="LineSeparator1"
                    Height="132"
                    Visibility="Collapsed"
                    Style="{StaticResource tenderBorderStyle}" />
                <controls:ImageButton
                    Name="Tender2"
                    Command="{Binding ActionCommand}"
                    Text="Tender2"
                    Visibility="Collapsed" />
                <Border
                    Name="LineSeparator2"
                    Height="132"
                    Visibility="Collapsed"
                    Style="{StaticResource tenderBorderStyle}" />
                <controls:ImageButton
                    Name="Tender3"
                    Command="{Binding ActionCommand}"
                    Text="Tender3"
                    Visibility="Collapsed" />
                <Border
                    Name="LineSeparator3"
                    Height="132"
                    Visibility="Collapsed"
                    Style="{StaticResource tenderBorderStyle}" />
            </StackPanel>
            <!-- +CRD 125377 -->
            <controls:ImageButton
                Name="OtherPaymentButton"
                Grid.Row="3"
                Style="{StaticResource tenderOtherPaymentStyle}"
                Text="{Loc OtherPaymentMethod}"
                Click="OtherPayment_Click"
                Visibility="Collapsed"/>
            <controls:ImageButton
                Name="SNDOtherPaymentButton"
                Grid.Row="3"
                Style="{StaticResource SNDtenderOtherPaymentStyle}"
                Text="{Loc ScotApp_9504}"
                Click="OtherPayment_Click" />
            <controls:MeasureTextBlock
                Name="SDNMsgText"
                Grid.Row="1"
                Style="{StaticResource SNDCenterNameStyle}"
                Text="{Loc ScotApp_9392}"
                Visibility="Visible"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                FontSize="29"
                Margin="0,0,0,0"
                Width="640" />
            <controls:MeasureTextBlock
                Grid.Row="4"
                Name="SDNWarningText"
                Style="{StaticResource SNDCenterNameStyle}"
                Text="{Loc ScotApp_9503}"
                Visibility="Visible"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                FontSize="14"
                Margin="0,35,0,0"
                Width="640" />
            <controls:ImageButton
                Name="ApplyMeijerCardButton"
                Grid.Row="3"
                Margin="10,0,10,0"
                Style="{StaticResource ApplyMeijerCardButtonStyleTender}"
                Command="{Binding ActionCommand}"
                CommandParameter="ApplyMeijerCard"
                Width="644"
                Height="81" />
            <Grid
                Name="SNDPaymentImage"
                Width="160"
                Height="81"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="2">
                <Image
                    Source="{Binding Converter={StaticResource PathConverter}, ConverterParameter={StaticResource SNDContactlessImage}}">
                    <Image.Style>
                        <Style
                            TargetType="Image">
                            <Setter
                                Property="Stretch"
                                Value="UniformToFill" />
                            <Setter
                                Property="Visibility"
                                Value="Visible" />
                        </Style>
                    </Image.Style>
                </Image>
            </Grid>
            <!-- -CRD 125377 -->
        </Grid>
        <Grid
            Name="OtherPayment"
            Grid.Row="0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="80" />
                <RowDefinition
                    Height="70" />
                <RowDefinition
                    Height="25" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.RowSpan="4"
                Style="{StaticResource glowBorderStyle}"
                Width="644"
                Height="482" />
            <controls:MeasureTextBlock
                Name="OtherPaymentOption"
                Grid.Row="0"
                Margin="24,18,12,0"
                Style="{StaticResource tenderTextStyle}"
                Text="{Loc OtherPaymentMethod}"
                Visibility="Collapsed"/>
            <sscouiViewsControls:DueAndPaid
                Grid.Row="1" />
            <sgp:PageIndicator
                x:Name="pageIndicator"
                Grid.Row="2"
                Height="20"
                Style="{StaticResource pageIndicatorStyle}" />
            <c:SSCOUISlidingGridPage
                Name="OtherTenderList"
                Grid.Row="3"
                Width="582"
                Height="284"
                Margin="0,0,0,23"
                SelectionMode="Single"
                Style="{StaticResource otherTenderListBoxStyle}"
                PageIndicatorControl="{Binding ElementName=pageIndicator}"
                ItemClicked="OtherTenderList_ItemClicked" />
        </Grid>
        <controls:ImageButton
            Name="GoBackSale"
            Grid.Row="1"
            Command="{Binding ActionCommand}"
            CommandParameter="Back"
            Text="{Loc Back}"
            Style="{StaticResource buttonGoBackStyle}"
            IsEnabled="{Binding ButtonGoBackEnabled}" />
        <controls:ImageButton
            Name="GoBackTender"
            Grid.Row="1"
            Visibility="Collapsed"
            Click="GoBackTender_Click"
            Text="{Loc Back}"
            Style="{StaticResource buttonGoBackStyle}" />
    </Grid>
</c:BackgroundView>
