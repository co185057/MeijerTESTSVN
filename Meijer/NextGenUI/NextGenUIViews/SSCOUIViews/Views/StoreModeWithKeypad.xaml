<c:BackgroundView
    x:Class="SSCOUIViews.Views.StoreModeWithKeypad"
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls"
    xmlns:c="clr-namespace:SSCOUIModels.Controls;assembly=SSCOUIModels"
    xmlns:helpers="clr-namespace:SSCOUIModels.Helpers;assembly=SSCOUIModels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewsControls="clr-namespace:SSCOUIViews.Controls"
    xmlns:local="clr-namespace:SSCOUIViews.Controls"
    mc:Ignorable="d"
    HorizontalAlignment="Left" 
    ShowCart="True">
    <Border
        Height="548"
        Width="644"
        Margin="20,20,0,0"
        Style="{StaticResource glowBorderStyle}">
        <DockPanel>
            <StackPanel
                Margin="24,20,24,0"
                Height="Auto"
                Orientation="Vertical"
                DockPanel.Dock="Top">
                <controls:MeasureTextBlock
                    Name="SMLineText"
                    Height="Auto"
                    MaxHeight="110"
                    Style="{StaticResource storeModeInfoTextStyle}"
                    />
            </StackPanel>
            <StackPanel
                Margin="24,16,24,0"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                DockPanel.Dock="Top">
                <local:NumericKeypad
                    x:Name="NumericPad"
                    BackgroundViewMode="True"
                    TelephoneType="True" />
                <ItemsControl
                    Name="ContainerStoreModeButtonsItemsControl"
                    VerticalAlignment="Top">
                    <ItemsControl.ItemContainerStyle>
                        <Style
                            TargetType="ImageButton"
                            BasedOn="{StaticResource storeModeMainButtonStyle}">
                            <Setter
                                Property="Height"
                                Value="48" />
                            <Setter
                                Property="Width"
                                Value="286" />
                            <Setter
                                Property="Command"
                                Value="{Binding ActionCommand}" />
                            <Setter
                                Property="Margin"
                                Value="24,0,0,4" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                Name="ButtonsPanel"
                                Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.Items>
                        <ImageButton
                            Name="StoreButton1"
                            CommandParameter="SMButton1" />
                        <ImageButton
                            Name="StoreButton2"
                            CommandParameter="SMButton2" />
                        <ImageButton
                            Name="StoreButton3"
                            CommandParameter="SMButton3" />
                        <ImageButton
                            Name="StoreButton4"
                            CommandParameter="SMButton4" />
                        <ImageButton
                            Name="StoreButton5"
                            CommandParameter="SMButton5" />
                        <ImageButton
                            Name="StoreButton6"
                            CommandParameter="SMButton6" />
                        <ImageButton
                            Name="StoreButton7"
                            CommandParameter="SMButton7" />
                    </ItemsControl.Items>
                </ItemsControl>
            </StackPanel>
        </DockPanel>       
    </Border>
</c:BackgroundView>