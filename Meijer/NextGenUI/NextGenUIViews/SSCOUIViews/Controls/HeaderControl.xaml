<StackPanel
    x:Class="SSCOUIViews.Controls.HeaderControl"
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Orientation="Horizontal"
    Height="114"
    DataContextChanged="StackPanel_DataContextChanged">
    <Image
        Name="NCRLogo"
        Style="{StaticResource logoImageStyle}"
        Margin="20" />
    <StackPanel
        Name="AssistTerminalInfo"
        Margin="-8,6,0,0"
        Width="175"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Visibility="Collapsed">
        <controls:MeasureTextBlock
            Name="AssistTerminalInfoText"
            Height="30"
            Style="{StaticResource MeijerstoreModeAssistTerminalInfoTextStyle}" />
        <controls:MeasureTextBlock
            Name="AssistTerminalInfo2Text"
            Height="30"
            Style="{StaticResource MeijerstoreModeAssistTerminalInfoTextStyle}" />
    </StackPanel>
    <StackPanel
        Name="StoreModeHeader"
        Margin="25,30,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Center">
        <controls:MeasureTextBlock
            Name="StoreModeScreenTitle1"
            Height="45"
            Style="{StaticResource MeijerStoreModeHeaderTitleTextStyle}" />
        <controls:MeasureTextBlock
            Name="StoreModeScreenTitle2"
            Height="45"
            Style="{StaticResource MeijerStoreModeHeaderTitleTextStyle}" />
    </StackPanel>
</StackPanel>
