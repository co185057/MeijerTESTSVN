<Grid x:Class="SSCOUIViews.Controls.WeightDetails"
    xmlns:controls="clr-namespace:SSCOControls;assembly=SSCOControls"
    xmlns:viewsControls="clr-namespace:SSCOUIViews.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
      DataContextChanged="Grid_DataContextChanged">
    <StackPanel>
        <controls:MeasureTextBlock
            Name="WeightTextBlock"
            Style="{StaticResource weightTextStyle}"
            Visibility="{Binding WeightShown, Converter={StaticResource BooleanToVisibilityConverter}}"
            NMI="{Binding NMI, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type viewsControls:WeightDetails}}}"
            NMIMinHeightInMillimeters="{StaticResource NMINumberHeight}" />
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="{Binding ScaleInfoAlignment, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type viewsControls:WeightDetails}}}">
            <controls:MeasureTextBlock
                Name="WeightInfoTextBlock"
                Panel.ZIndex="1"
                Style="{StaticResource measuresImageLabelStyle}"
                Width="{Binding ScaleInfoWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type viewsControls:WeightDetails}}}"
                NMI="{Binding NMI, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type viewsControls:WeightDetails}}}"
                NMIMinHeightInMillimeters="{StaticResource NMIMeasurementHeight}">
                <Image
                    Name="ScaleLogo"
                    Style="{StaticResource scaleLogoStyle}" />
                <Run
                    Name="ScaleInfo" />
            </controls:MeasureTextBlock>
        </StackPanel>
    </StackPanel>
</Grid>
